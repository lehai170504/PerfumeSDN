<%- include('../partials/header', { title: 'Đăng nhập', user: null }) %> <%-
include('../partials/navbar', { user: null }) %>

<div class="hero min-h-screen bg-base-200 -mt-24 pt-24">
  <div class="hero-content flex-col">
    <div class="text-center">
      <h1 class="text-5xl font-bold text-secondary">Chào mừng trở lại!</h1>
      <p class="py-6">Đăng nhập để quản lý hồ sơ và gửi phản hồi</p>
    </div>
    <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
      <form action="/auth/login" method="POST" class="card-body">
        <% if (error) { %>
        <div role="alert" class="alert alert-error mb-4">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="stroke-current shrink-0 h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"
            />
          </svg>
          <span><%= error %></span>
        </div>
        <% } %>
        <div class="form-control">
          <label class="label"><span class="label-text">Email</span></label>
          <input
            type="email"
            placeholder="Email đăng nhập"
            name="email"
            class="input input-bordered"
            required
          />
        </div>
        <div class="form-control">
          <label class="label"><span class="label-text">Mật khẩu</span></label>
          <input
            type="password"
            placeholder="Mật khẩu"
            name="password"
            class="input input-bordered"
            required
          />
        </div>
        <div class="form-control mt-6">
          <button type="submit" class="btn btn-secondary">Đăng nhập</button>
        </div>
        <div class="text-center mt-4">
          <a href="/auth/register" class="link link-hover text-primary"
            >Đăng ký tài khoản mới</a
          >
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
