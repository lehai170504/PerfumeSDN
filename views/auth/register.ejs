<%- include('../partials/header', { title: 'Đăng ký Tài khoản', user: null,
pageCss: 'register.css' }) %> <%- include('../partials/navbar', { user: null })
%>

<main class="register-page">
  <section class="register-container">
    <div class="register-info">
      <h1>Đăng ký thành viên</h1>
      <p>
        Trở thành thành viên để có thể bình luận và quản lý hồ sơ cá nhân của
        bạn.
      </p>
    </div>

    <div class="register-card">
      <form action="/auth/register" method="POST">
        <% if (error) { %>
        <div class="alert-error"><%= error %></div>
        <% } %>

        <div class="form-group">
          <label for="membername">Tên (membername)</label>
          <input
            type="text"
            id="membername"
            name="membername"
            placeholder="Tên của bạn"
            required
          />
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="example@myteam.com"
            required
          />
        </div>

        <div class="form-group">
          <label for="password">Mật khẩu</label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Mật khẩu"
            required
          />
        </div>

        <button type="submit" class="btn-register">Đăng ký</button>

        <p class="login-link">
          Đã có tài khoản?
          <a href="/auth/login">Đăng nhập</a>
        </p>
      </form>
    </div>
  </section>
</main>

<%- include('../partials/footer') %>
