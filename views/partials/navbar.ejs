<header>
  <div
    class="navbar bg-primary text-primary-content shadow-lg sticky top-0 z-50"
  >
    <div class="flex-1">
      <a href="/" class="btn btn-ghost normal-case text-xl font-serif">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
          />
        </svg>
        Perfume Bliss
      </a>
    </div>
    <div class="flex-none">
      <ul class="menu menu-horizontal p-0">
        <li><a href="/" class="hover:bg-primary-focus">Trang chủ</a></li>

        <% if (user && user.isAdmin) { %>
        <li>
          <a
            href="/admin/dashboard"
            class="hover:bg-primary-focus font-bold text-warning"
            >Admin Panel</a
          >
        </li>
        <% } %> <% if (user) { %>
        <li class="dropdown dropdown-end">
          <div tabindex="0" role="button" class="btn btn-ghost m-1">
            Chào, <%= user.name.split(' ')[0] %>!
          </div>
          <ul
            tabindex="0"
            class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52 text-base-content"
          >
            <li><a href="/member/profile">Hồ sơ của tôi</a></li>
            <% if (user && user.isAdmin) { %>
            <li>
              <a href="/admin/dashboard" class="font-bold">Dashboard Admin</a>
            </li>
            <% } %>
            <li class="border-t mt-1">
              <a href="/auth/logout" class="text-error">Đăng xuất</a>
            </li>
          </ul>
        </li>
        <% } else { %>
        <li>
          <a
            href="/auth/login"
            class="btn btn-sm btn-ghost hover:bg-primary-focus"
            >Đăng nhập</a
          >
        </li>
        <li>
          <a href="/auth/register" class="btn btn-sm btn-secondary ml-2"
            >Đăng ký</a
          >
        </li>
        <% } %>
      </ul>
    </div>
  </div>
</header>
<main class="flex-grow p-8"></main>
