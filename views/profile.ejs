<div class="container mx-auto px-4 py-8">
  <h1 class="text-4xl font-extrabold text-center mb-10 text-primary">
    Quản lý Hồ sơ
  </h1>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
    <div class="card bg-base-100 shadow-xl border border-base-300">
      <div class="card-body">
        <h2 class="card-title text-2xl font-bold text-secondary mb-4">
          Thông tin cá nhân
        </h2>

        <form
          action="/api/members/profile?_method=PUT"
          method="POST"
          class="space-y-4"
        >
          <div class="form-control">
            <label for="name" class="label">
              <span class="label-text">Họ và tên</span>
            </label>
            <input
              type="text"
              id="name"
              name="name"
              value="<%= member.name %>"
              required
              class="input input-bordered w-full"
            />
          </div>

          <div class="form-control">
            <label for="yob" class="label">
              <span class="label-text">Năm sinh</span>
            </label>
            <input
              type="number"
              id="yob"
              name="YOB"
              value="<%= member.YOB %>"
              required
              class="input input-bordered w-full"
              min="1900"
              max="<%= new Date().getFullYear() %>"
            />
          </div>

          <div class="form-control">
            <label class="label">
              <span class="label-text">Giới tính</span>
            </label>
            <div class="flex gap-6 pt-1">
              <div class="form-control">
                <label class="label cursor-pointer gap-2">
                  <input type="radio" id="male" name="gender" value="true"
                  class="radio checked:bg-primary" <%= member.gender ? 'checked'
                  : '' %>>
                  <span for="male" class="label-text">Nam</span>
                </label>
              </div>
              <div class="form-control">
                <label class="label cursor-pointer gap-2">
                  <input type="radio" id="female" name="gender" value="false"
                  class="radio checked:bg-primary" <%= !member.gender ?
                  'checked' : '' %>>
                  <span for="female" class="label-text">Nữ</span>
                </label>
              </div>
            </div>
          </div>

          <div class="card-actions justify-end pt-6">
            <button type="submit" class="btn btn-primary btn-wide">
              Cập nhật Profile
            </button>
          </div>
        </form>
      </div>
    </div>

    <div class="card bg-base-100 shadow-xl border border-base-300">
      <div class="card-body">
        <h2 class="card-title text-2xl font-bold text-secondary mb-4">
          Đổi mật khẩu
        </h2>

        <form
          action="/api/members/password?_method=PUT"
          method="POST"
          class="space-y-4"
        >
          <div class="form-control">
            <label for="oldPassword" class="label">
              <span class="label-text">Mật khẩu cũ</span>
            </label>
            <input
              type="password"
              id="oldPassword"
              name="oldPassword"
              required
              class="input input-bordered w-full"
            />
          </div>

          <div class="form-control">
            <label for="newPassword" class="label">
              <span class="label-text">Mật khẩu mới</span>
            </label>
            <input
              type="password"
              id="newPassword"
              name="newPassword"
              required
              class="input input-bordered w-full"
            />
          </div>

          <div class="card-actions justify-end pt-6">
            <button type="submit" class="btn btn-warning btn-wide">
              Đổi mật khẩu
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
