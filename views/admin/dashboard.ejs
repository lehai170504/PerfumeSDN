<%- include('../partials/header', { title: 'Admin Dashboard', user: loggedInUser
}) %> <%- include('../partials/navbar', { user: loggedInUser }) %>

<link rel="stylesheet" href="/css/admin-dashboard.css" />

<div class="dashboard-container">
  <% if (success && success.length > 0) { %>
  <div class="alert alert-success">
    <p><%= success[0] %></p>
    <span class="close-btn" onclick="this.parentElement.style.display='none';">
      &times;
    </span>
  </div>
  <% } %> <% if (error && error.length > 0) { %>
  <div class="alert alert-error">
    <p><%= error[0] %></p>
    <span class="close-btn" onclick="this.parentElement.style.display='none';">
      &times;
    </span>
  </div>
  <% } %>

  <h1 class="page-title">
    Chào mừng, Admin <%= loggedInUser ? loggedInUser.name : 'Quản trị viên' %>!
  </h1>

  <div class="card-grid">
    <div class="card">
      <div class="card-body">
        <h2 class="card-title">Quản lý Nước hoa</h2>
        <div class="card-actions">
          <a href="/admin/manage_perfumes" class="btn btn-primary">Xem</a>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h2 class="card-title">Quản lý Thương hiệu</h2>
        <div class="card-actions">
          <a href="/admin/manage_brands" class="btn btn-primary">Xem</a>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h2 class="card-title">Quản lý Thành viên</h2>
        <div class="card-actions">
          <a href="/admin/manage_members" class="btn btn-primary">Xem</a>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h2 class="card-title">Thống kê</h2>
        <p>Tổng số thành viên, nước hoa, và thương hiệu.</p>
        <div class="card-actions">
          <button class="btn btn-outline">Chi tiết</button>
        </div>
      </div>
    </div>
  </div>

  <div class="alert alert-warning">
    ⚠️ Đây là khu vực quản trị, vui lòng thao tác cẩn thận.
  </div>
</div>

<%- include('../partials/footer') %>
