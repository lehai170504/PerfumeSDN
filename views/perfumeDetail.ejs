<div class="container mx-auto px-4 py-8">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
    <div class="space-y-6">
      <h1 class="text-4xl font-extrabold text-primary">
        <%= perfume.perfumeName %>
      </h1>

      <p class="text-xl font-semibold text-base-content opacity-80">
        Thương hiệu:
        <span class="text-accent font-bold"
          ><%= perfume.brand.brandName %></span
        >
      </p>

      <div class="card w-full shadow-xl bg-base-200">
        <figure class="p-4 bg-white rounded-xl">
          <img
            src="<%= perfume.uri %>"
            class="rounded-lg object-contain w-full max-h-96"
            alt="<%= perfume.perfumeName %>"
          />
        </figure>
      </div>

      <div class="card bg-base-100 shadow-md border border-base-300">
        <div class="card-body p-0">
          <ul class="divide-y divide-base-300">
            <li class="p-4 flex justify-between items-center text-lg font-bold">
              <span>Giá:</span>
              <span class="text-3xl text-success font-extrabold">
                <%= perfume.price.toLocaleString('vi-VN') %> VNĐ
              </span>
            </li>
            <li class="p-4 flex justify-between">
              <span>Nồng độ:</span>
              <span class="font-bold">
                <div
                  class="badge <%= perfume.concentration === 'Extrait' ? 'badge-secondary' : 'badge-info' %> badge-lg p-3"
                >
                  <%= perfume.concentration %>
                </div>
              </span>
            </li>
            <li class="p-4 flex justify-between">
              <span>Dung tích:</span>
              <span class="font-bold text-base-content"
                ><%= perfume.volume %>ml</span
              >
            </li>
            <li class="p-4 flex justify-between">
              <span>Đối tượng:</span>
              <span class="font-bold text-base-content"
                ><%= perfume.targetAudience %></span
              >
            </li>
          </ul>
        </div>
      </div>

      <div class="prose max-w-none">
        <h4 class="text-2xl font-semibold mt-6 text-primary">Mô tả</h4>
        <p class="text-base text-base-content"><%= perfume.description %></p>

        <h4 class="text-2xl font-semibold mt-6 text-primary">Thành phần</h4>
        <p class="text-base text-base-content"><%= perfume.ingredients %></p>
      </div>
    </div>

    <div>
      <h3 class="text-3xl font-bold mb-6 text-primary">
        Bình luận & Đánh giá (<%= perfume.comments.length %>)
      </h3>

      <% const hasCommented = member ? perfume.comments.some(c =>
      c.author._id.toString() === member._id.toString()) : false; %> <% if
      (member && !hasCommented) { %>
      <div class="card bg-base-100 shadow-lg p-6 mb-8 border border-base-300">
        <h5 class="text-xl font-semibold mb-4">Viết bình luận của bạn</h5>
        <form
          action="/api/perfumes/<%= perfume._id %>/comments"
          method="POST"
          class="space-y-4"
        >
          <div class="form-control w-full max-w-xs">
            <label for="rating" class="label">
              <span class="label-text">Đánh giá (1-3 sao)</span>
            </label>
            <input
              type="range"
              min="1"
              max="3"
              id="rating"
              name="rating"
              value="3"
              step="1"
              class="range range-warning"
            />
            <div class="w-full flex justify-between text-xs px-2">
              <span>1★</span>
              <span>2★</span>
              <span>3★</span>
            </div>
          </div>

          <div class="form-control">
            <label for="content" class="label">
              <span class="label-text">Nội dung</span>
            </label>
            <textarea
              id="content"
              name="content"
              rows="3"
              required
              class="textarea textarea-bordered h-24"
              placeholder="Chia sẻ ý kiến của bạn..."
            ></textarea>
          </div>

          <button type="submit" class="btn btn-success mt-4">
            Gửi Bình luận
          </button>
        </form>
      </div>
      <% } else if (member && hasCommented) { %>
      <div role="alert" class="alert alert-warning mb-8">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="stroke-current shrink-0 h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
          />
        </svg>
        <span>Bạn đã gửi bình luận cho loại nước hoa này.</span>
      </div>
      <% } else { %>
      <div role="alert" class="alert alert-info mb-8">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          class="stroke-current shrink-0 w-6 h-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
          ></path>
        </svg>
        <span
          >Vui lòng
          <strong
            ><a href="/auth/login" class="link link-primary font-bold"
              >Đăng nhập</a
            ></strong
          >
          để gửi bình luận.</span
        >
      </div>
      <% } %>

      <div class="space-y-4">
        <% perfume.comments.forEach(comment => { %>
        <div class="card bg-base-100 shadow-md border border-base-300">
          <div class="card-body p-4">
            <div class="flex justify-between items-start">
              <div>
                <strong class="text-lg text-primary"
                  ><%= comment.author.name %></strong
                >
                <div class="text-warning text-xl mt-1">
                  <% for(let i = 0; i < comment.rating; i++) { %>★<% } %>
                </div>
              </div>
              <small class="text-sm text-base-content opacity-60"
                ><%= new Date(comment.createdAt).toLocaleDateString('vi-VN')
                %></small
              >
            </div>

            <p class="text-base text-base-content mt-2">
              <%= comment.content %>
            </p>

            <% if (member && comment.author._id.toString() ===
            member._id.toString()) { %>
            <div
              class="card-actions justify-end mt-3 border-t pt-2 border-base-200"
            >
              <button
                class="btn btn-sm btn-info"
                data-comment-id="<%= comment._id %>"
              >
                Sửa
              </button>
              <form
                action="/api/perfumes/<%= perfume._id %>/comments/<%= comment._id %>?_method=DELETE"
                method="POST"
                class="inline-block"
              >
                <button type="submit" class="btn btn-sm btn-error">Xóa</button>
              </form>
            </div>
            <% } %>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>
