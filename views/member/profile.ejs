<%- include('../partials/header', { title: 'Cập nhật Hồ sơ', user: loggedInUser }) %>
<%- include('../partials/navbar', { user: loggedInUser }) %>

<div class="container mx-auto max-w-2xl">
    <h1 class="text-3xl font-bold text-center mb-8 text-primary">Chỉnh sửa Hồ sơ cá nhân</h1>
    
    <% if (message) { %>
        <div class="alert <%= message.type === 'success' ? 'alert-success' : 'alert-error' %> mb-4"><%= message.text %></div>
    <% } %>

    <div class="card bg-base-100 shadow-xl p-8 mb-8">
        <h2 class="text-2xl font-bold mb-6">Thông tin Cơ bản</h2>
        
        <form action="/member/profile/<%= member._id %>?_method=PUT" method="POST" class="space-y-6">
            
            <div class="form-control">
                <label class="label"><span class="label-text">Email</span></label>
                <input type="email" value="<%= member.email %>" class="input input-bordered bg-gray-200" disabled />
            </div>

            <div class="form-control">
                <label class="label"><span class="label-text">Tên (name)</span></label>
                <input type="text" name="name" value="<%= member.name || '' %>" class="input input-bordered" required />
            </div>

            <div class="form-control">
                <label class="label"><span class="label-text">Năm sinh (YOB)</span></label>
                <input type="number" name="YOB" value="<%= member.YOB || '' %>" class="input input-bordered" min="1900" max="<%= new Date().getFullYear() %>" />
            </div>

            <div class="form-control">
                <label class="label"><span class="label-text">Giới tính (gender)</span></label>
                <select name="gender" class="select select-bordered">
                    <option value="true" <%= member.gender === true ? 'selected' : '' %>>Nam</option>
                    <option value="false" <%= member.gender === false ? 'selected' : '' %>>Nữ</option>
                    <option value="" <%= member.gender === undefined || member.gender === null ? 'selected' : '' %>>Chưa xác định</option>
                </select>
            </div>
            
            <div class="form-control mt-8">
                <button type="submit" class="btn btn-primary">Lưu Thay đổi Profile</button>
            </div>
        </form>
    </div>

    <div class="card bg-base-100 shadow-xl p-8">
        <h2 class="text-2xl font-bold mb-4 text-error">Đổi Mật khẩu</h2>
        <p class="text-sm text-warning mb-6">Chỉ điền vào các trường này nếu bạn muốn đổi mật khẩu.</p>
        
        <form action="/member/password?_method=PUT" method="POST" class="space-y-6">
            
            <div class="form-control">
                <label class="label"><span class="label-text">Mật khẩu mới</span></label>
                <input type="password" name="newPassword" placeholder="Nhập mật khẩu mới" class="input input-bordered" required />
            </div>
            
            <div class="form-control">
                <label class="label"><span class="label-text">Xác nhận Mật khẩu mới</span></label>
                <input type="password" name="confirmNewPassword" placeholder="Nhập lại mật khẩu mới" class="input input-bordered" required />
            </div>

            <div class="form-control mt-8">
                <button type="submit" class="btn btn-error">Đổi Mật khẩu</button>
            </div>
        </form>
    </div>

    <div class="text-center mt-6">
        <p class="text-sm text-error">Lưu ý: Bạn không được phép chỉnh sửa hoặc xóa thông tin của thành viên khác, kể cả Admin.</p>
    </div>
</div>

<%- include('../partials/footer') %>